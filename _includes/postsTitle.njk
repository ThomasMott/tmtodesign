<section id="main">
	<div class="grid">
		<div class="categories">
		<span>&middot;</span>
		<a href="/"
		{% if page.url == "/" %}
			aria-current="page"
		{% endif %}
		>all</a>
		<span>&middot;</span>
		{% for category in collections.categories %}
			<a href="/categories/{{ category.slug }}/"
			{% if category.title in page.url %}
				aria-current="page"
			{% endif %}
			>{{ category.title }}</a> <span>&middot;</span>
		{% endfor %}
		</div>
	</div>
</section>
