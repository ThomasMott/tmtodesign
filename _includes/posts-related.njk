<section class="bg">
	<div class="grid">
		<div class="row blog-card related">
			{% for post in posts %}
				<article class="cards">
						<div class="card-txt">
							<div class="main-txt">
								<a href="/projects/{{ post.data.name }}" title="{{ post.data.title }}">
									<h1><span>{{ post.data.title }}</span></h1>
									<p class="d">{{ post.data.tldr }}</p>
									<p class="s">{{ post.data.date | postDate }} <span>&middot;</span> {{ post.data.time }}</p>
								</a>
								<ul>
									{% for tag in post.data.tags %}
										{% if tag !== 'post' %}
											{% if tag !== 'ep' %}
												<li>{{ tag }}</li>
											{% endif %}
										{% endif %}
									{% endfor %}
								</ul>
							</div>
						</div>
						<div class="card-img">
							<img src="{{ post.data.image }}">
						</div>
				</article>
			{% endfor %}
		</div>
	</div>
</section>
